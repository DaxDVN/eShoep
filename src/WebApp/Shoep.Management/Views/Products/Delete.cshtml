@model Shoep.Management.Models.Catalog.ProductModel

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h2>Delete Product</h2>
    <div class="alert alert-warning">
        <p>Are you sure you want to delete this product?</p>
        <p>
            <strong>Name:</strong> @Model.Name
        </p>
        <p>
            <strong>Description:</strong> @Model.Description
        </p>
        <p>
            <strong>Price:</strong> @Model.Price
        </p>
        <p>
            <strong>Stock Quantity:</strong> @Model.StockQuantity
        </p>
        <p>
            <strong>Category:</strong> @Model.Category?.Name
        </p>
    </div>
    <form method="post" asp-action="Delete">
        <input type="hidden" name="Id" value="@Model.Id"/>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>