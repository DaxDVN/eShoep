@model Shoep.Management.Models.Catalog.ProductModel

@{
ViewData["Title"] = "Create Product";
}

<div class="container mt-4">
    <h2>Create New Product</h2>
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" required />
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea class="form-control" id="Description" name="Description" required></textarea>
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <input type="number" class="form-control" id="Price" name="Price" step="0.01" required />
        </div>
        <div class="form-group">
            <label for="StockQuantity">Stock Quantity</label>
            <input type="number" class="form-control" id="StockQuantity" name="StockQuantity" required />
        </div>
        <div class="form-group">
            <label for="CategoryId">Category</label>
            <select class="form-control" id="CategoryId" name="CategoryId" required>
                <!-- Populate this dynamically with categories -->
                @foreach (var category in (ViewBag.Categories as List<Shoep.Management.Models.Catalog.CategoryModel>)!)
                {
                <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
