@model Shoep.Management.Models.Purchasing.OrderDto

<div class="container my-5">
    <h2 class="mb-4">Order Details</h2>

    <!-- General Information -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">General Information</div>
        <div class="card-body">
            <p>
                <strong>Order ID:</strong> @Model.Id
            </p>
            <p>
                <strong>Customer ID:</strong> @Model.CustomerId
            </p>
            <p>
                <strong>Order Name:</strong> @Model.OrderName
            </p>
            <p>
                <strong>Status:</strong> @Model.Status
            </p>
            <p>
                <strong>Total Price:</strong> @Model.TotalPrice.ToString("C")
            </p>
        </div>
    </div>

    <!-- Shipping Address -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">Shipping Address</div>
        <div class="card-body">
            <p>
                <strong>First Name:</strong> @Model.ShippingAddress.FirstName
            </p>
            <p>
                <strong>Last Name:</strong> @Model.ShippingAddress.LastName
            </p>
            <p>
                <strong>Email:</strong> @Model.ShippingAddress.EmailAddress
            </p>
            <p>
                <strong>Address Line:</strong> @Model.ShippingAddress.AddressLine
            </p>
            <p>
                <strong>Country:</strong> @Model.ShippingAddress.Country
            </p>
            <p>
                <strong>State:</strong> @Model.ShippingAddress.State
            </p>
            <p>
                <strong>Zip Code:</strong> @Model.ShippingAddress.ZipCode
            </p>
        </div>
    </div>

    <!-- Billing Address -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">Billing Address</div>
        <div class="card-body">
            <p>
                <strong>First Name:</strong> @Model.BillingAddress.FirstName
            </p>
            <p>
                <strong>Last Name:</strong> @Model.BillingAddress.LastName
            </p>
            <p>
                <strong>Email:</strong> @Model.BillingAddress.EmailAddress
            </p>
            <p>
                <strong>Address Line:</strong> @Model.BillingAddress.AddressLine
            </p>
            <p>
                <strong>Country:</strong> @Model.BillingAddress.Country
            </p>
            <p>
                <strong>State:</strong> @Model.BillingAddress.State
            </p>
            <p>
                <strong>Zip Code:</strong> @Model.BillingAddress.ZipCode
            </p>
        </div>
    </div>

    <!-- Payment Information -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">Payment Information</div>
        <div class="card-body">
            <p>
                <strong>Card Name:</strong> @Model.Payment.CardName
            </p>
            <p><strong>Card Number:</strong> **** **** **** @Model.Payment.CardNumber[^4..]</p>
            <p>
                <strong>Expiration:</strong> @Model.Payment.Expiration
            </p>
            <p><strong>CVV:</strong> ***</p>
            <p>
                <strong>Payment Method:</strong> @Model.Payment.PaymentMethod
            </p>
        </div>
    </div>

    <!-- Order Items -->
    <div class="card">
        <div class="card-header bg-success text-white">Order Items</div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("C")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>